<div class="single-item large-centered">
  {{#each featured_projects}}
    <div>
      <figure class="orbit-figure">
        <a href="/project/{{slug}}">
          <img width="2300" height="500" src="{{banner_url}}" alt="{{name}}'s Project Banner">
        </a>
        <figcaption class="orbit-caption">{{name}}</figcaption>
      </figure>
    </div>
  {{/each}}
</div>
<br />

<div class="row column text-center">
  <h2>Popular Projects</h2>
  <hr>
</div>
<div class="row small-up-2 medium-up-3 large-up-6">
  {{#each popular_projects}}
    <div class="column">
      <a href="/project/{{slug}}">
        <img class="thumbnail" width="400" height="300" src="{{image_url}}" alt="{{name}}'s Project Image">
      </a>
      <h5>{{name}}</h5>
      <p>{{collaborators.length}} collaborators(s)</p>
      <a href="/project/{{slug}}" class="button small expanded hollow">Collab</a>
    </div>
  {{/each}}
</div>

<hr>
<div class="row column">
  <h3>Latest Projects</h3>
  <br />
</div>
<div class="row small-up-1 medium-up-2 large-up-4">
  {{#each latest_projects}}
    <div class="media-object column">
      <div class="media-object-section">
        <a href="/project/{{slug}}">
          <img width="100" height="100" class="thumbnail" src="{{logo_url}}" alt="{{name}}'s Project Icon">
        </a>
      </div>
      <div class="media-object-section">
        <h5>{{name}}</h5>
        <p>{{description_short}}</p>
      </div>
    </div>
  {{/each}}
</div>
