<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <meta charset="utf-8" />
    <title>{{title}} - GuildCoder</title>

    <!-- Foundation Headers -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.min.css">

    <!-- Stylesheets -->
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <!-- Fonts -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Pacifico" />

    <!-- FontAwesome Icons -->
    <script src="https://kit.fontawesome.com/d88ccc776c.js" crossorigin="anonymous"></script>

    <!-- Slick Carousel  -->
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>

    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-2.1.4.min.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-migrate-1.2.1.min.js" type="text/javascript"></script>
  </head>
  <body>
  <!-- Start Top Bar -->
  <div class="top-bar">
    <div class="top-bar-left">
      <ul class="menu">
        <li class="menu-text logo"><a href="/">GuildCoder</a></li>
        <li><a href="/trending"><i class="fa-solid fa-fire"></i>Trending</a></li>
        <li><a href="/new"><i class="fa-solid fa-certificate"></i>New</a></li>
        <li><a href="/guilds"><i class="fa-solid fa-people-group"></i>Guilds</a></li>
        <li><a href="/project/create"><i class="fa-solid fa-handshake"></i>Collab</a></li>
      </ul>
    </div>
    <div class="top-bar-right">
      <ul class="menu">
        {{#if user}}
          <li>
            <ul class="dropdown menu" data-dropdown-menu>
              <li>
                <a><i class="fa-solid fa-user"></i>{{user.username}}</a>
                <ul class="menu">
                  <li><a href="/profile/{{user.username}}">My Profile</a></li>
                  <li><a href="/messages">Messages</a></li>
                  <li><a href="/settings">Settings</a></li>
                  <li><a href="/logout">Logout</a></li>
                </ul>
              </li>
            </ul>
          </li>
        {{else}}
          <li><a href="/login"><i class="fa-solid fa-right-to-bracket"></i>Log In</a></li>
          <li><a href="/register"><i class="fa-solid fa-user-plus"></i>Sign Up</a></li>
        {{/if}}
      </ul>
    </div>
  </div>
  <!-- End Top Bar -->

    {{{body}}}


  <!-- Start Bottom Bar -->
  <footer class="">
    <div class="callout large secondary stick-to-bottom">
      <div class="row">
        <div class="large-4 columns">
          <h5 class="logo">GuildCoder by Zandercraft</h5>
          <p>
            An open collaboration platform made to facilitate cooperation between developers on cool new projects;
            helping you find people to build your project with.
          </p>
        </div>
        <div class="large-3 columns">
          <ul class="menu horizontal align-right">
            <li><a href="/terms"><i class="fa-solid fa-file-lines"></i>Terms and Conditions</a></li>
            <li><a href="/privacy-policy"><i class="fa-solid fa-check"></i>Privacy Policy</a></li>
            <li>Copyright (c) 2022 Zandercraft.</li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
  <!-- End Bottom Bar -->

  <!-- Dark Mode and Light Mode Scripts -->
  <script>
    function darkMode() {
      let element = document.body;
      element.className = "dark-mode";
    }
    function lightMode() {
      let element = document.body;
      element.className = "light-mode";
    }
  </script>

  <!-- Foundation, Slick Carousel Scripts -->
  <script src="https://dhbhdrzi4tiry.cloudfront.net/cdn/sites/foundation.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

  <!-- Google ReCaptcha -->
  <script src="https://www.google.com/recaptcha/api.js"></script>
  <script>
    // Foundation Setup
    $(document).foundation();

    // Slick Carousel Setup
    $(document).ready(function () {
      $('.single-item').slick(
        {
          accessibility: true,
          adaptiveHeight: false,
          autoplay: true,
          autoplaySpeed: 6000,
          arrows: false,
          dots: true,
          draggable: true,
          swipe: true,
          infinite: true,
          initialSlide: 0,
          mobileFirst: true,
          pauseOnFocus: true,
          pauseOnDotsHover: true,
          waitForAnimate: true
        }
      )
    })
  </script>
  </body>
</html>
